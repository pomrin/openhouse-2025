<UserControl x:Class="OHMontageApp.UserControls.PhotoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OHMontageApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="45px" Height="45px" Background="{Binding BackgroundColor}">
        <Border BorderBrush="Black" BorderThickness="1,1,1,1">
            <Image Grid.Row="0" Source="{Binding ImageUrl}" Opacity="1"/>
        </Border>
    </Grid>
</UserControl>
